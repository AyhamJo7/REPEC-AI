# Rename this file to .env and update the values below

# Flask configuration
SECRET_KEY=           # Secret key for signing session cookies; generate a secure random string
FLASK_APP=run.py       # Entry point of your Flask application
FLASK_ENV=development  # Environment mode (development for local testing, production for deployment)

# Database configuration
DATABASE_URL=sqlite:///app.db  # Database connection URL (using SQLite here; change for other databases)

# OpenAI API configuration
OPENAI_API_KEY=       # Your OpenAI API key (get it from https://platform.openai.com)

# OAuth configuration
GOOGLE_CLIENT_ID=     # Google OAuth Client ID (obtain from the Google Cloud Console)
GOOGLE_CLIENT_SECRET= # Google OAuth Client Secret (obtain from the Google Cloud Console)



